---
const {title, subtitle, image} = Astro.props;
---

<section class="hero">
    <div class="container">
        <img src={image} alt="Profile Image"/>
        <div class="text">
            <h1>{title}</h1>
            <h2>{subtitle}</p>
        </div>
    </div>
</section>

<style>
    .hero {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 3rem 2rem;
        position: sticky;
        top: 0;
        height: 100vh;
    }

    @media (max-width: 1200px) {
        .hero {
            position: static;
            height: auto;
            min-height: auto;
            padding: 2rem 1rem 1rem 1rem;
        }
    }

    .container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 20px;
        padding: 40px;
        border-radius: 10px;
        flex-wrap: wrap;
        max-width: 1200px;
        margin: 0 auto;
    }

    img {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        object-fit: cover;
    }

    .text {
        text-align: center;
    }

    .text h1 {
        margin: 0;
        font-size: 2.5rem;
        color: #ffffff;
    }

    .text h2 {
        margin: 5px 0 0 0;
        font-size: 1.5rem;
        color: #efefef;
    }

    @media (max-width: 768px) {
        .container {
            flex-direction: column;
            padding: 20px;
            gap: 15px;
        }

        img {
            width: 180px;
            height: 180px;
        }

        .text h1 {
            font-size: 2rem;
        }

        .text h2 {
            font-size: 1.2rem;
        }
    }

    @media (max-width: 480px) {
        .container {
            padding: 15px;
        }

        img {
            width: 150px;
            height: 150px;
        }

        .text h1 {
            font-size: 1.5rem;
        }

        .text h2 {
            font-size: 1rem;
        }
    }
</style>