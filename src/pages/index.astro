---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Projects from '../components/Projects.astro';
---

<Layout>
  <div class="main-layout">
    <Hero
      image="profile.png"
      title="Yeremy Pujols" 
      subtitle="I'm a fullstack developer!"
    />
    
    <main class="container">
      <section class="projects-section">
        <h2>Mis Proyectos</h2>
        <Projects />
      </section>
    </main>
  </div>
</Layout>

<style>
  .main-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    min-height: 100vh;
    align-items: start;
  }

  @media (max-width: 1200px) {
    .main-layout {
      grid-template-columns: 1fr;
      min-height: auto;
    }
  }

  .container {
    max-width: 100%;
    margin: 0 auto;
    padding: 2rem;
  }

  @media (max-width: 1200px) {
    .container {
      padding: 2rem;
    }
  }
  .projects-section h2 {
    text-align: center;
    margin-bottom: 0rem;
    color: #e0c28b;
    text-shadow: 0 0 20px #e0c28b;
    font-size: 2rem;
    word-wrap: break-word;
    overflow-wrap: break-word;
  }

  @media (max-width: 768px) {
    .container {
      padding: 1.5rem;
    }

    .projects-section h2 {
      font-size: 1.5rem;
    }
  }


  @media (max-width: 480px) {
    .container {
      padding: 1rem;
    }

    .projects-section h2 {
      font-size: 1.25rem;
      margin-bottom: 1.5rem;
    }
  }
</style>